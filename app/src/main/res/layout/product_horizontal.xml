<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgHz2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@tools:sample/avatars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prcHZ1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="150dh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgHz2" />

    <TextView
        android:id="@+id/oldPrcHz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#F90716"
        android:text="200dh"
        app:layout_constraintEnd_toEndOf="@+id/imgHz2"
        app:layout_constraintTop_toBottomOf="@+id/imgHz2" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_gravity="bottom"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/oldPrcHz"
        app:layout_constraintEnd_toEndOf="@+id/oldPrcHz"
        app:layout_constraintStart_toStartOf="@+id/oldPrcHz"
        app:layout_constraintTop_toTopOf="@+id/oldPrcHz" />

    <TextView
        android:id="@+id/nameHz"
        android:layout_width="105dp"
        android:layout_height="20dp"
        android:layout_marginTop="13dp"
        android:text="ATAR VESION Lunettes de soleil Unisexe polarized Protection UV400"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prcHZ1" />
</androidx.constraintlayout.widget.ConstraintLayout>